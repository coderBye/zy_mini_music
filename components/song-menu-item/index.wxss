.song-item .image {
  position: relative;
}

.song-item .image .playCount {
  position: absolute;
  right: 0;
  bottom: 12rpx;
  padding: 4rpx 6rpx;
  border-radius: 10rpx;
  color: #fff;
  font-size: 28rpx;
  background-color: rgba(0, 0, 0, .5);
}

.song-item .desc {
  white-space: normal;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}