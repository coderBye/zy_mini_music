/* pages/music-play/index.wxss */
page {
  color: #fff;
  padding: 0;
}

.bg-image, .bg-cover {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.bg-cover {
  background-color: rgba(0,0,0,.5);
  backdrop-filter: blur(30px);
}

.divider{
  margin: 0 20rpx;
}

/* 播放主区域 */
.content{
  padding: 0 30rpx;
}

.content-song{
  display: flex;
  flex-direction: column;
}

.content-song .image{
  flex: 5;
  margin-top: 10rpx;
}

.content-song .image image{
  width: 100%;
  border-radius: 50rpx;
}

.content-song .info{
  padding: 10rpx 0;
  height: 200rpx;
}

.content-song .info .title{
  font-size: 60rpx;
  font-weight: 700;
}

.content-song .info .author{
  padding: 10rpx 0;
  font-size: 30rpx;
  color: #ccc;
}

.content-song .info .album{
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 36rpx;
}

.content-song .lyric{
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
  color: #26ce8a;
}

.content-song .progress{
  height: 120rpx;
  padding: 10rpx 0;
}

.content-song .progress .time{
  display: flex;
  justify-content: space-between;
  padding: 0 36rpx;
  font-size: 28rpx;
}

.content-song .operation{
  display: flex;
  height: 160rpx;
  margin-top: 15rpx;
  margin-bottom: 20rpx;
}

.content-song .operation image{
  flex: 1;
  padding: 0 20rpx;
}